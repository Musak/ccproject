<html>
	<head>
		<style type="text/css">
		.center {
		    margin-left: auto;
		    margin-right: auto;
		    width: 80%;
		    background-color: #b0e0e6;
		}

		table.hovertable {
			font-family: verdana,arial,sans-serif;
			font-size:11px;
			color:#333333;
			border-width: 1px;
			border-color: #999999;
			border-collapse: collapse;
		}
		table.hovertable th {
			background-color:#9FD5CA;
			border-width: 1px;
			padding: 8px;
			border-style: solid;
			border-color: #a9c6c9;
		}
		table.hovertable tr {
			background-color:#EDE5A3;
		}
		table.hovertable td {
			border-width: 1px;
			padding: 8px;
			border-style: solid;
			border-color: #a9c6c9;
		}
		table.hovertable tr:hover {
          background-color: #DDDD4D;
    	}
    	h3 {
    		 text-indent: 10em;
		}

		td {
			text-align: center;
		}

		</style>
	</head>

